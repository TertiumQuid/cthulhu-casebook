  window.fbAsyncInit = function() {
	FB.Event.subscribe('auth.statusChange', function(response) {

    });
	
    FB.init({
      appId      : <%= CthulhuCasebook::Application.config.facebook['app_id'] %>,
      channelUrl : '//www.cthulhucasebook.com/channel.html',
      status     : true, // automatically check login status
