<h1><%= @encounter.title %></h1>
<p><%= @encounter.description %></p>
	
<% @encounter.paths.each do |path| %>
  <br />
  <% if path.available_for?(current_character) %>
    <%= link_to encounter_path_path(@encounter, path) do %>
      <p><strong><%= path.title %></strong><p>
      <p><%= truncate(path.text, :length => 40) %></p>
      <% unless path.challenge.blank? %>
        <p><em><small><%= "#{path.challenge.difficulty_text} #{path.challenge.tag.titleize}" %> challenge</small></em></p>
      <% end %>  	 
    <% end %>  
  <% else %>  
    <p><strong><%= path.title %></strong> (UNAVAILABLE)<p>
	<p>Requires: <%= path.requirement_display(true).titleize %></p>	
  <% end %>  
<% end %>

<br />
<p><%= link_to 'Perhaps another time', location_path %></p>