<p>
  <label><%= @character.gender == 'female' ? 'Ms' : 'Mr' %>. <strong><%= @character.name %></strong>, a curious <%= @character.gender == 'female' ? 'lady' : 'gentleman' %></label>
</p>

<h4>Traits</h4>
<ul>
  <% @character.profile.find_tagging('traits').tags.each do |tag| %>
    <li><%= tag._id %> <%= tag.value %></li>
  <% end %>
</ul>

<h4>Pathology</h4>
<ul>
  <% @character.profile.find_tagging('pathology').tags.each do |tag| %>
    <li><%= tag._id %> <%= tag.value %></li>
  <% end %>
</ul>